@model EBookOnlineBookOrderingSystem.Models.Buybook

@{
    ViewBag.Title = "BuyNow";
}

<style>
</style>

@using (Html.BeginForm("PlaceOrder", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            <div class="col-md-10">
                <label>Book Name</label>
               <input id="bid" name="bid" type="hidden" value="@Model.SelectBook.id" />
                @Html.DisplayFor(model => model.SelectBook.name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label>Price</label>
                @Html.DisplayFor(model => model.SelectBook.price, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label>Buy quantity</label>
                @Html.TextBoxFor(model => model.BuyQuantity, new { @class = "form-control", type = "number", min = 1, max = Model.SelectBook.quantity })
                @Html.ValidationMessageFor(model => model.BuyQuantity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Place Order" />
                @Html.ActionLink("Add More Item", "AddItem", new { bid = Model.SelectBook.id, BuyQuantity = Model.BuyQuantity })
            </div>
        </div>
    </div>


}
<div>
   

    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
      function AddMoreItem(id)
      {

          if (confirm("Do you want to add one more book ?"))
            {
                PostAction("@Url.Action("AddItem", "Home")")
            }
    }

</script>
