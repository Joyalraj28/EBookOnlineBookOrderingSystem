@using EBookOnlineBookOrderingSystem.Models.Table
@using EBookOnlineBookOrderingSystem.Controls
@model EBookOnlineBookOrderingSystem.Models.CustomBookModel

@{
    ViewBag.Title = "View";
}

<h2>@Html.DisplayFor(model => model.BookInfo.name)</h2>



<style>
    .cart {
        background-color: wheat;
        display: flex;
      
        height: 300px;
        padding: 10px;
        border-radius: 5px;
    }

        .cart img {
            width: 180px;
            height: 180px;
        }

    #cont-body {
        margin: 10px;
        margin-top:100px;
    }

    #cont-head {
        display: flex;
        margin: 10px;
    }

    #control{
        display:flex;
        flex-direction:row;
        padding:10px;
    }

    #Info-a{
        margin:10px;
        height:40px;
        width:150px;
    }
</style>

<h2>Details</h2>

<hr />

<div class="cart">

    <div id="cont-head" class="dl-horizontal">
        <img class="sup" src="@Url.Content(Model.ImgPath)" />
    </div>


    <dl class="cont-body">

        <dt>
            @Html.DisplayNameFor(model => model.BookInfo.quantity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BookInfo.quantity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BookInfo.price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BookInfo.price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BookInfo.catergoryname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BookInfo.catergoryname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BookInfo.authorname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BookInfo.authorname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BookInfo.description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BookInfo.description)
        </dd>

    </dl>
</div>

<div id="control">
    @{
        if (SessionControls<Users>.GetValue("LoginUser") is Users LoginUser && !string.IsNullOrEmpty(LoginUser?.username))
        {
            <div id="Info-a">
                @Html.ActionLink("Buy Now", "BuyNow", new { id = Model?.BookInfo?.id })
            </div>
            <div id="Info-a">
                @Html.ActionLink("Add to card", "Addtocard", new { id = Model?.BookInfo?.id })
            </div>
        }
        <div id="Info-a" style="width: 100px;"> @Html.ActionLink("Back to List", "Index")</div>
    }


</div>


