@using EBookOnlineBookOrderingSystem.Models;

@model HomeModel

@{
    ViewBag.Title = "Home Page";

}

<div class="Content">

    <div class="jumbotron">
        <h1>E-Book</h1>
        <p class="lead">E-Book is Online Book ordering Plateform</p>
        <nav class="navbar navbar-light bg-light">
            <form class="form-inline">
                <input class="form-control mr-sm" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </nav>
    </div>

    <div class="row">
        <h2>Most View Books</h2>

        @foreach (var book in Model.Books)
        {
            <div class="col-md-4">
                <div class="BookTag">
                    <h1>@book.name</h1>
                    <img class="sup" src="~/Content/Image/img.png" />
                    <p>
                        @book.description
                    </p>
                    <div>
                        <div class="Price">
                            <h2>@book.price</h2>
                            <h2>.00/=</h2>
                        </div>
                    </div>
                    @*<a  class="btn btn-default">View</a>*@
                    @Html.ActionLink("View", "ViewBook", new { id = book.id }, new
                    {
                        @class= "btn btn-default"
                    });
                </div>
            </div>

        }
    </div>
</div>