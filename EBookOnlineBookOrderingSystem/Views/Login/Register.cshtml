
@{
    ViewBag.Title = "Register";
}


@model EBookOnlineBookOrderingSystem.Models.Table.Users


<div class="Login-main">
    <div class="Login-body">
        <div class="Login-container" id="container">
            <div class="form-container sign-in-container">
                @using (Html.BeginForm("SaveReister", "Login", FormMethod.Post))
                {
                    <h1>Register</h1>



                    @if (TempData["RegisterValidation"] != null)
                    {
                    <div id="LoginFail">
                        <label>$TempData["RegisterValidation"]</label>
                    </div>
                    }

                    @Html.TextBoxFor(User => User.username, new { @placeholder = "Username" })
                    @Html.TextBoxFor(User => User.password, new { @placeholder = "Password", @type = "password" })
                    @Html.TextBoxFor(User => User.password, new { @placeholder = "Re-Password", @type = "password" })
                    @Html.TextBoxFor(User => User.email, new { @placeholder = "Email" })
                    <input type="submit" value="Register" />
                    <button id="Cancel" onclick="Cancel()">Cancel</button>

                    <script>
                        function Cancel() {
                            window.location.replace = "@Url.Action("Index", "Login")";
                        }
                    </script>

                    @*<div class="ActionLogin-btn-link">
            @Html.ActionLink("Register", "Register")
                </div>*@

                }
            </div>
            <div class="overlay-container">
                <div class="overlay">
                    <div class="overlay-panel overlay-left">
                        <h1>Welcome Back!</h1>
                        <p>To keep connected with us please login with your personal info</p>
                        <button class="ghost" id="signIn">Sign In</button>
                    </div>
                    <div class="overlay-panel overlay-right">
                        <h1>Welcome to EBook</h1>
                        <p>Make wonderfull day one Book</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

